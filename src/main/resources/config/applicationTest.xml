<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:util="http://www.springframework.org/schema/util"

       xsi:schemaLocation="http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-4.3.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/tx 
		http://www.springframework.org/schema/tx/spring-tx-4.3.xsd
		http://www.springframework.org/schema/context  
		http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-4.1.xsd
		
		http://www.springframework.org/schema/task 
		http://www.springframework.org/schema/task/spring-task.xsd">
    <!-- 往容器中添加一个对象 -->
    <bean id="dog" class="com.atguigu.common.pojo.Dog">
        <property name="name" value="小黄"></property>
        <property name="age" value="3"></property>
    </bean>

    <!--    <bean id="dog2" class="com.atguigu.common.pojo.Dog">
            <property name="name" value="小黄"></property>
            <property name="age" value="3"></property>
        </bean>-->

    <bean id="car" class="com.atguigu.common.pojo.Car">
        <constructor-arg value="Audi" type="java.lang.String"></constructor-arg>
        <constructor-arg value="上海" type="java.lang.String"></constructor-arg>
        <constructor-arg value="240" type="int"></constructor-arg>
    </bean>
    <bean id="car2" class="com.atguigu.common.pojo.Car">
        <constructor-arg value="Audi" type="java.lang.String"></constructor-arg>
        <constructor-arg value="上海" type="java.lang.String"></constructor-arg>
        <constructor-arg value="300000" type="double"></constructor-arg>
    </bean>
    <bean id="car3" class="com.atguigu.common.pojo.Car">
        <constructor-arg value="Audi" type="java.lang.String"></constructor-arg>
        <!--注入特殊字符如<>需要使用 <![CDATA[]]> 包起来 -->
        <constructor-arg type="java.lang.String">
            <value> <![CDATA[<shanghai~>]]> </value>
        </constructor-arg>
        <!--通过value子节点方式注入-->
        <constructor-arg type="double">
            <value>250</value>
        </constructor-arg>
    </bean>

    <!--person-->
    <bean id="person" class="com.atguigu.common.pojo.Person">
        <property name="name" value="刘晨"></property>
        <property name="age" value="19"></property>
        <property name="car" ref="car3"></property>
    </bean>

    <bean id="person2" class="com.atguigu.common.pojo.Person">
        <property name="name" value="刘晨"></property>
        <property name="age" value="19"></property>
        <property name="car">
            <ref bean="car3"></ref>
        </property>
    </bean>

    <bean id="person3" class="com.atguigu.common.pojo.Person">
        <property name="name" value="刘晨"></property>
        <property name="age" value="19"></property>
        <!--内部bean,不能被外部引用-->
        <property name="car">
            <bean class="com.atguigu.common.pojo.Car">
                <constructor-arg value="大众"></constructor-arg>
                <constructor-arg value="一汽"></constructor-arg>
                <constructor-arg value="160000"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean id="person4" class="com.atguigu.common.pojo.Person">
        <property name="name" value="刘晨"></property>
        <property name="age" value="19"></property>
        <!--内部bean,不能被外部引用-->
        <property name="car">
            <bean class="com.atguigu.common.pojo.Car">
                <property name="brand" value="丰田"></property>
                <property name="corp" value="日本造"></property>
                <property name="maxSpend" value="200"></property>
                <property name="price" value="300000"></property>
            </bean>
        </property>
    </bean>
    <!--级联属性-->
    <bean id="person5" class="com.atguigu.common.pojo.Person">
        <constructor-arg value="jetty"></constructor-arg>
        <constructor-arg value="25"></constructor-arg>
        <constructor-arg ref="car"></constructor-arg>
        <!--为级联属性赋值-->
        <property name="car.maxSpend" value="189"></property>
    </bean>
    <!--测试如何配置list集合属性-->
    <bean id="book" class="com.atguigu.common.pojo.Book">
        <property name="name" value="mike"></property>
        <property name="age" value="27"></property>
        <property name="cars">
            <!--使用list节点为list属性赋值-->
            <list>
                <ref bean="car"></ref>
                <ref bean="car2"></ref>
                <ref bean="car3"></ref>
            </list>
        </property>
    </bean>
    <!--配置map属性值-->
    <bean id="book2" class="com.atguigu.common.pojo.Book">
        <property name="name" value="Rose"></property>
        <property name="age" value="28"></property>
        <property name="mapCars">
            <!--使用map节点为map属性赋值-->
            <map>
                <entry key="AA" value-ref="car"></entry>
                <entry key="BB" value-ref="car2"></entry>
            </map>
        </property>
    </bean>

    <bean id="book3" class="com.atguigu.common.pojo.Book">
        <property name="name" value="Rose"></property>
        <property name="age" value="28"></property>
        <property name="cars" ref="cars"></property>
    </bean>


    <!--测试模拟连接数据库-->
    <bean id="dataSourcePojo" class="com.atguigu.common.pojo.DataSourcePojo">
        <property name="properties">
            <props>
                <prop key="user">root</prop>
                <prop key="password">123456</prop>
                <prop key="url">jdbc:mysql://106.14.155.20:3306/ssm_crud?characterEncoding=utf-8</prop>
                <prop key="driver">com.mysql.jdbc.Driver</prop>
            </props>
        </property>
    </bean>


    <!--配置单例的集合bean,以供多个bean进行引用，需要导入util命名空间-->
    <util:list id="cars">
        <ref bean="car"></ref>
        <ref bean="car2"></ref>
    </util:list>

</beans>